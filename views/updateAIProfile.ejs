<%- include('includes/header') %>
 
<section>
    <div class="feature-photo">
      <figure>
        <img
          class="cover-photo"
          id="cover-photo"
          src="../public/img/cover1.jpg"
          style="width: 100%; height: 700px; object-fit: cover;"
        />
      </figure>

      <form action="edit-photo" id="form-cover-photo" onsubmit="return false;">
        <i class="fa fa-camera-retro"></i>

        <label class="fileContainer">
          Cover Photo
          
        </label>
      </form>

      <div class="container-fluid">
        <div class="row merged">
          <div class="col-md-2">
            <div class="user-avatar">
              <figure>
                <img
                  class="profile-image"
                  id="profile-image"
                  src="../public/img/angela.webp"
                  style="width: 100%; height: 150px; object-fit: cover;"
                />
                <form
                  class="edit-photo"
                  id="form-upload-image"
                  onsubmit="return false;"
                >
                  <i class="fa fa-camera-retro"></i>
                  <label class="fileContainer">
                     Display Photo
                    
                  </label>
                </form>
              </figure>
            </div>
          </div>
          
          <div class="col-md-10">
            <div class="timeline-info">
              <ul>
                <li class="admin-name">
                  <h5
                    class="user-name"
                    style="padding-top: 20px; padding-bottom: 20px;"
                    
                  > 
                  <%= name %>
                </h5>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>

<section>
  <div class="gap gray-bg">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="row" id="page-contents">
            <div class="col-md-3">
              <!-- Left sidebar (optional) -->
            </div>
            <div class="col-md-6">
              <div class="central-meta">
                <div class="editing-info">
                  <h5 class="f-title">
                    <i class="ti-info-alt"></i>  Profile
                  </h5>
                  <form>
                    <div class="form-group">
                      <input type="text" required class="name" name="name" value="<%= name %>">
                      <label class="control-label">Full Name</label>
                      <i class="mtrl-select"></i>
                    </div>
                    <br><br>
                    <div class="form-group">
                      <input type="email" required class="email" name="email" value="<%= email %>">
                      <label class="control-label">Email</label>
                      <i class="mtrl-select"></i>
                    </div>
                    <br><br>
                    <div class="form-group">
                      <input type="text" class="dob" name="dob" value="<%= dob %>">
                      <label class="control-label">Date of Birth</label>
                      <i class="mtrl-select"></i>
                    </div>
                    <br><br>
                    <div class="form-group">
                      <input type="text" class="city" name="city" value="<%= city %>" >
                      <label class="control-label">City</label>
                      <i class="mtrl-select"></i>
                    </div>
                    <br><br>
                    <div class="form-group">
                      <input type="text" class="country" name="country" value="<%= country %>" >
                      <label class="control-label">Country</label>
                      <i class="mtrl-select"></i>
                    </div>
                    <br><br>
                    <div class="form-group">
                      <textarea rows="4" class="aboutMe" name="aboutMe" value="<%= aboutMe %>"></textarea>
                      <label class="control-label">About Me</label>
                      <i class="mtrl-select"></i>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <!-- Right sidebar (optional) -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>




<%- include('includes/footer') %>
