<html>
  <head>
    <title>AlertMe 9Ja</title>
    <link rel="stylesheet" href="/public/css/main.min.css">
    <link rel="stylesheet" href="/public/css/color.css">
    <link rel="stylesheet" href="/public/css/responsive.css">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/styles/auth.css">

  </head>

  <body>
    <div class="theme-layout">
      <div class="container-fluid pdng0">
        <div class="row merged bg-log">
          <div class="offset-md-3 col-md-6">
            <div class="login-reg-bg">
              <div class="log-reg-area">
                <h2 class="log-title">Login</h2>

                <form onsubmit="return doLogin(this);">
                  <div class="form-group">
                    <input type="text" required name="email" />
                    <label class="control-label">Email</label>
                    <i class="mtrl-select"></i>
                  </div>
                  <div class="form-group">
                    <input type="text" required name="password" />
                    <label class="control-label">Password</label>
                    <i class="mtrl-select"></i>
                  </div>

                  <a href="/signup">Don't have an account?</a>
                  <div class="submit-btns">
                    <button class="mtr-btn signup" name="submit" type="submit">
                      <span>Login</span>
                    </button>
                  </div>
                </form>
              
            </div>
          
        </div>
    
    </div>
    <script src="../public/js/authPages/auth.js"></script>
  </body>
</html>
